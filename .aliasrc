# Better ls 
alias ls='ls --color=auto --group-directories-first'
alias l='ls --color=auto --group-directories-first'
alias ll='ls -la --group-directories-first'
alias lt='ls --human-readable --size -1 -S --classify --group-directories-first'

# Other common gnu commands 
alias df='df -H'
alias du='du -hc'
alias grep='grep --color=auto'
alias mkdir='mkdir -pv'
alias cat='highlight --out-format=ansi' # Cat with syntax highlighting

alias sdn='sudo shutdown -h now'
alias copy='xclip -selection clipboard'

# Development stuff
alias pyc='setsid pycharm .'
alias ve='python3 -m venv ./venv'
alias va='source ./venv/bin/activate'
alias djrs='python3 manage.py runserver'
alias djt='python3 manage.py test'
alias load-nvm=' \. "/home/ap/.config/nvm/nvm.sh"'
alias vim='nvim'
alias asm='nasm -f elf64 -g -o a.o a.asm & ld -g -o a a.o'
